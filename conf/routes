# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                controllers.ApplicationController.index
GET         /auth/signOut                         controllers.ApplicationController.signOut
GET         /auth/authenticate/:provider          controllers.SocialAuthController.authenticate(provider)

GET         /auth/signUp                          controllers.SignUpController.view
POST        /auth/signUp                          controllers.SignUpController.submit

GET         /auth/signIn                          controllers.SignInController.view
POST        /auth/signIn                          controllers.SignInController.submit

GET         /auth/totp                            controllers.TotpController.view(userId: java.util.UUID, sharedKey: String, rememberMe: Boolean)
GET         /auth/enableTotp                      controllers.TotpController.enableTotp
GET         /auth/disableTotp                     controllers.TotpController.disableTotp
POST        /auth/totpSubmit                      controllers.TotpController.submit
POST        /auth/enableTotpSubmit                controllers.TotpController.enableTotpSubmit

GET         /auth/totpRecovery                    controllers.TotpRecoveryController.view(userID: java.util.UUID, sharedKey: String, rememberMe: Boolean)
POST        /auth/totpRecoverySubmit              controllers.TotpRecoveryController.submit

GET         /auth/password/forgot                 controllers.ForgotPasswordController.view
POST        /auth/password/forgot                 controllers.ForgotPasswordController.submit
GET         /auth/password/reset/:token           controllers.ResetPasswordController.view(token: java.util.UUID)
POST        /auth/password/reset/:token           controllers.ResetPasswordController.submit(token: java.util.UUID)
GET         /auth/password/change                 controllers.ChangePasswordController.view
POST        /auth/password/change                 controllers.ChangePasswordController.submit

GET         /auth/account/email/:email            controllers.ActivateAccountController.send(email: String)
GET         /auth/account/activate/:token         controllers.ActivateAccountController.activate(token: java.util.UUID)


GET         /profile         controllers.UserController.profile

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.versioned(file)
->          /webjars                         webjars.Routes
